<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.kevinxchan.kevinxchan.stretchit">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".StarterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RoutinesActivity">
        </activity>
        <activity
                android:name=".AddExercisesActivity"
                android:windowSoftInputMode="adjustPan"
                android:label="@string/activity_add_exercises_title">
        </activity>
        <activity android:name=".ExerciseActivity">
        </activity>
        <activity android:name=".RoutineNameActivity">
        </activity>
    </application>

</manifest>