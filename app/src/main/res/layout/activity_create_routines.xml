<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.kevinxchan.kevinxchan.stretchit.CreateRoutinesActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="59dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/horizontalNameLayout" android:gravity="top">
        <TextView
                android:text="@string/routineName"
                android:layout_width="132dp"
                android:layout_height="wrap_content" android:id="@+id/routineNameTextView" android:layout_weight="1"
                android:textSize="18sp"/>
        <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:inputType="text|textShortMessage"
                android:ems="10"
                android:layout_weight="1" android:id="@+id/routineNameInputEditText"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="41dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/exercisesLayout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalNameLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.08">
        <TextView
                android:text="@string/exercisesTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/exercisesTitleTextView"
                android:textAlignment="viewStart" android:textSize="18sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
