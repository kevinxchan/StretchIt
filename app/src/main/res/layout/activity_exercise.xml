<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.kevinxchan.kevinxchan.stretchit.ExerciseActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="344dp"
            android:layout_height="495dp"
            android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginEnd="16dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/exercise_name"
                  android:textSize="18sp"
                  android:layout_marginBottom="18sp"/>
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exerciseName"
                    android:hint="@string/exercise_name_hint" android:inputType="textShortMessage"
                    android:layout_marginBottom="24sp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/category_of_activity"
                  android:textSize="18sp"
                  android:layout_marginBottom="18sp"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginBottom="24sp">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/countdownChoice"
                    android:text="@string/countdown_choice"
                    android:textSize="12sp"/>

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/exerciseChoice"
                    android:text="@string/exercise_choice"/>

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/restChoice"
                    android:text="@string/rest_choice"/>
        </RelativeLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/duration"
                  android:textSize="18sp"
                  android:layout_marginBottom="18sp"/>
