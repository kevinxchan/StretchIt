<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.kevinxchan.kevinxchan.stretchit.StarterActivity">

    <TextView
            android:text="@string/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getStartedTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="40sp" app:layout_constraintVertical_bias="0.299"
    />
    <Button
            android:text="@string/get_started_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getStartedBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/getStartedTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.308"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>
